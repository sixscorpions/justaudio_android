<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background">@color/white</item>
        <item name="colorControlHighlight">@color/black_transparent</item>
        <item name="colorControlNormal">@color/background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/APP_ANIMATION</item>
    </style>

    <style name="APP_ANIMATION">
        <item name="android:activityOpenEnterAnimation">@anim/window_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/window_close</item>
    </style>

    <style name="APP_SPLASH_THEME" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/APP_ANIMATION</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_height</item>
        <item name="android:background">@color/divider_line</item>
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:layout_marginRight">@dimen/_10dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/_0dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tv_no_result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/txt_list_no_result_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tv_movie_info_label">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tv_movie_info_value">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
