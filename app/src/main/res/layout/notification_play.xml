<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_with"
        android:background="@drawable/bg_player_dark"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/icon_player"
            android:layout_width="@dimen/icon_with"
            android:layout_height="@dimen/icon_with"
            android:contentDescription="@string/txt_cd" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_current_music_notification"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="center"
                    android:lines="2"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:requiresFadingEdge="horizontal"
                    android:scrollHorizontally="true"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />


                <ImageView
                    android:id="@+id/iv_notification_cancel"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_weight="0.05"
                    android:contentDescription="@string/txt_cd"
                    android:src="@drawable/icon_close"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_duration_notification"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="@string/txt_cd"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10dp">

                <ImageButton
                    android:id="@+id/btn_prev_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@color/transparent"
                    android:contentDescription="@string/txt_cd"
                    android:src="@drawable/icon_player_prev_active" />

                <ImageButton
                    android:id="@+id/btn_play_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:contentDescription="@string/txt_cd"
                    android:src="@drawable/icon_player_play" />


                <ImageButton
                    android:id="@+id/btn_next_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:contentDescription="@string/txt_cd"
                    android:src="@drawable/icon_playlist_next_active" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>